<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>net10.0-ios;net9.0-ios</TargetFrameworks>
    <RootNamespace>BugfenderSDK</RootNamespace>
    <Nullable>enable</Nullable>
    <ImplicitUsings>true</ImplicitUsings>
    <IsBindingProject>true</IsBindingProject>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <NoBindingEmbedding>true</NoBindingEmbedding>
    
    <!-- Platform-specific minimum iOS versions -->
    <SupportedOSPlatformVersion Condition="'$(TargetFramework)' == 'net10.0-ios'">15.0</SupportedOSPlatformVersion>
    <SupportedOSPlatformVersion Condition="'$(TargetFramework)' == 'net9.0-ios'">15.0</SupportedOSPlatformVersion>
    <SupportedOSPlatformVersion Condition="'$(TargetFramework)' == 'net8.0-ios'">16.1</SupportedOSPlatformVersion>
  </PropertyGroup>
  
  <ItemGroup>
    <ObjcBindingApiDefinition Include="ApiDefinitions.cs" />
    <ObjcBindingCoreSource Include="StructsAndEnums.cs" />
  </ItemGroup>
  
  <ItemGroup>
    <NativeReference Include="BugfenderSDK.xcframework">
      <Kind>Framework</Kind>
      <SmartLink>False</SmartLink>
      <ForceLoad>True</ForceLoad>
      <Frameworks>SystemConfiguration Security MobileCoreServices CoreGraphics</Frameworks>
      <IsCxx>True</IsCxx>
    </NativeReference>
  </ItemGroup>
  
  <ItemGroup>
    <LinkerPreserve Include="BugfenderSDK.Bugfender">
      <VisibleMembers>SetApiURL;SetBaseURL;SetSDKType;ActivateLogger;SetMaximumLocalStorageSize;EnableUIEventLogging;EnableCrashReporting;LogWithLineNumber;ForceSendOnce;SendIssueReturningUrlWithTitle;SendCrashWithTitle;SendUserFeedbackReturningUrlWithSubject</VisibleMembers>
    </LinkerPreserve>
  </ItemGroup>
  
  <ItemGroup>
    <TransformFile Include="Transforms\*.xml" />
  </ItemGroup>
  
  <Import Project="..\Shared\Shared.projitems" Label="Shared" Condition="Exists('..\Shared\Shared.projitems')" />
</Project>